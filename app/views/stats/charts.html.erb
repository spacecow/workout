<%= render 'stats_menu' %>

<script type="text/javascript" charset="utf-8">
  $(function(){
    new Highcharts.Chart({
      chart: {
        renderTo: "chart7days"
      },
      title: {
        text: "7 Days Top Score"
      },
      xAxis: {
        type: "datetime"
      },
      yAxis: {
        title: {
          text: "min"
        }
      },
      tooltip: {
        formatter: function () {
          return Highcharts.dateFormat("%B %e %Y", this.x) + ': ' +
          Highcharts.numberFormat(this.y, 0) + ' min';
        }
      },
      series: [
      <% @topentries.each do |name,entries| %>
        {
        name: '<%= name %>',
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= entries.first.chartdate %>,
        data: <%= entries.map(&:score) %>
        },
      <% end %>
      ],
    });
  });
</script>

<div id="chart7days" style="width:560px; height:300px;"></div>

<%= form_tag posts_path, :method => :get do %>
  <%= submit_tag t('helpers.submit.calendar'), :class => :cancel %>
<% end %>

