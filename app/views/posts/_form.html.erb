<%= simple_form_for post do |f| %>
  <%= f.input :date, :as => :string, wrapper_html:{id:'date'} %>
  <%= f.input :training_type_token, wrapper_html:{id:'training_type'}, input_html:{data:{load:[post.training_type], url:training_types_path(format: :json)}} %>
  <%= f.input :distance, hint:'km' %>
  <%= f.input :duration, hint:'min' %>
  <%= f.input :time_of_day, :as => :string %>
  <%= f.input :comment %>
  <%= f.input :training_partner_ids, as: :select, collection:@training_partners %>
  <%= f.button :submit, :class => :submit %>
<% end %>
