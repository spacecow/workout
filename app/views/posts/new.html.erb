<%= title @date %>

<hr>

<%= render 'posts', posts:@posts if @posts.present? %>

<h2><%= new(:post) %></h2>

<%= simple_form_for @post do |f| %>
  <%= f.input :date, :as => :string, wrapper_html:{id:'date'} %>
  <%= f.input :distance %>
  <%= f.input :duration %>
  <%= f.input :time_of_day, :as => :string %>
  <%= f.input :comment %>
  <%= hidden_field_tag :date, @date %>
  <%= hidden_field_tag :month, @month %>
  <%= f.button :submit, :class => :submit %>
<% end %>

<%= form_tag posts_path, :method => :get do %>
  <%= hidden_field_tag :date, @date %>
  <%= hidden_field_tag :month, @month %>
  <%= submit_tag t('helpers.submit.calendar'), :class => :cancel %>
<% end %>

<div class="clear"></div>
