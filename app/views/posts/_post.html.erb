<% present post do |presenter| %>
  <div class="post">
    <%= presenter.title(post.training_types,title) %>
    <%= presenter.timestamp %>
    <%= presenter.distance %>
    <%= presenter.author %>
    <%= presenter.training_partners %>
    <%= presenter.actions %>
    <div class="clear"></div>
    <%= presenter.comment %>
  </div>
  <hr>
<% end %>
