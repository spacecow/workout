<% present post do |presenter| %>
  <div class="post" style="background-color: <%= post.intensity_colour %>">
    <div id="intensity" style="color: <%= post.intensity_colour %>">
      <div id="number">
        <%= post.intensity %>
      </div>
    </div>
    <div id="rest">
      <%= presenter.title(post.training_types,title) %>
      <%= presenter.timestamp %>
      <%= presenter.distance %>
      <%= presenter.author %>
      <%= presenter.training_partners %>
      <%= presenter.actions("new_comment_#{i}") %>
      <div class="clear"></div>
      <%= presenter.comment %>
      <%= render 'comments/comments', comments:comments, background:post.intensity_colour if comments.present? %>
      <%= simple_form_for [post, comment], html:{id:"new_comment_#{i}"} do |f| %>
        <%= f.input :content, label:false %>
        <%= f.button :submit, class: :submit %>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>
  <hr>
<% end %>

