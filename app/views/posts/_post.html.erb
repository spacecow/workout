<% present post do |presenter| %>
  <div class="post">
    <%= presenter.title(post.training_types,title) %>
    <%= presenter.timestamp %>
    <%= presenter.distance %>
    <%= presenter.author %>
    <%= presenter.training_partners %>
    <%= presenter.actions("new_comment_#{i}") %>
    <div class="clear"></div>
    <%= presenter.comment %>
    <%= render 'comments/comments', comments:comments if comments.present? %>
    <%= simple_form_for [post, comment], html:{id:"new_comment_#{i}"} do |f| %>
      <%= f.input :content, label:false %>
      <%= f.button :submit, class: :submit %>
    <% end %>
    <div class="clear"></div>
  </div>
  <hr>
<% end %>

