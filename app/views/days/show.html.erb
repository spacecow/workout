<%= title @day.date %>

<hr>

<% present @day do |presenter| %>

<%# cache @day do %>
  <%= render 'posts/posts', posts:@posts, title: :type if @posts.present? %>
<%# end %>

<h2><%= new(:post) %></h2>

<%= render 'posts/form', post:@post, partners:@training_partners, location:'post' unless @post.nil? %>

<%= form_tag posts_path(month:session_month), :method => :get, id:'cancel_post' do %>
  <%= submit_tag t('helpers.submit.calendar'), :class => :cancel %>
<% end %>

<div class="clear"></div>

<hr>

<%= presenter.current_state_form @current_state %>

<% end %>
